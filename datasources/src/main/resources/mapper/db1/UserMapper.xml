<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hdsong.datasources.mapper.db1.UserMapper" >

    <resultMap id="BaseResultMap" type="com.hdsong.datasources.entity.db1.User" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>


    <sql id="Base_Column_List" >
        id, `name`
    </sql>


    <select id="selectUserList" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM `user`
    </select>


    <insert id="saveUser" parameterType="com.hdsong.datasources.entity.db1.User">
        INSERT INTO `user`
           (id, `name`)
        VALUES
           ( #{id}, #{name} )
    </insert>

</mapper>